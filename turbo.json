{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [".env"],
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["dev:db-init"]
		},
		"dev:db-init": {
			"cache": false,
			"dependsOn": ["^dev:db-init"]
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "build/**"]
		},
		"test": {
			"dependsOn": ["build"],
			"outputs": []
		},
		"lint": {
			"cache": true
		},
		"lint:fix": {
			"cache": true
		}
	}
}
